<Page x:Class="Nim.UI.Views.GameOver"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nim.UI.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="550"
      Title="GameOver">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label Name="lblWinner" Content="Winner" FontFamily="Comic Sans MS" FontSize="24" Foreground="Yellow" HorizontalAlignment="Center" Margin="10"/>
            <Button Content="Restart Game" FontFamily="Comic Sans MS" FontSize="24" Foreground="Yellow" Background="Plum" HorizontalAlignment="Center" Margin="10" Click="Restart_Click"/>
            <Button Content="Change _Difficulty" FontFamily="Comic Sans MS" FontSize="24" Foreground="Yellow" Background="Plum" HorizontalAlignment="Center" Margin="10" Click="ChangeDifficulty_Click"/>
            <Button Content="_Main Menu" FontFamily="Comic Sans MS" FontSize="24" Foreground="Yellow" Background="Plum" HorizontalAlignment="Center" Margin="10" Click="MainMenu_Click"/>
            <Button Content="E_xit" FontFamily="Comic Sans MS" FontSize="24" Foreground="Yellow" Background="Plum" HorizontalAlignment="Center" Margin="10" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Page>
