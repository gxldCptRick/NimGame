<UserControl x:Class="Nim.UI.Views.UserControls.NameEntryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nim.UI.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid>
        <Label Content="Enter Name:" HorizontalAlignment="Left" Margin="55,10,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" Foreground="Yellow" />
        <TextBox HorizontalAlignment="Left" Height="23" Margin="55,39,0,0" TextWrapping="Wrap" Text="{Binding PName}" VerticalAlignment="Top" Width="120" FontFamily="Comic Sans MS" 
                 Foreground="Yellow" Background="Plum"/>
    </Grid>
</UserControl>
